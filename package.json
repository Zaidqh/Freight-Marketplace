{
  "name": "freight-marketplace",
  "version": "1.1.0",
  "description": "Freight Marketplace — UK ↔ EU (Express 5 + Prisma + Postgres)",
  "private": true,
  "type": "commonjs",
  "main": "server.js",
  "engines": {
    "node": ">=18.17"
  },
  "scripts": {
    "dev": "nodemon --quiet -r dotenv/config server.js",
    "start": "node -r dotenv/config server.js",
    "postinstall": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "cross-env NODE_ENV=test jest --runInBand"
  },
  "keywords": [
    "logistics",
    "marketplace",
    "uk-eu",
    "express",
    "prisma",
    "express5"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^2.2.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pino": "^9.0.0",
    "pino-http": "^9.0.0",
    "prisma": "^6.14.0",
    "stripe": "^16.6.0",
    "socket.io": "^4.7.5",
    "uuid": "^11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": false
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  }
}
